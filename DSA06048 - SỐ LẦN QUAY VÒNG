#include <bits/stdc++.h>

using namespace std;

using ll = long long;

int main(){
	int t; cin >> t;
	while(t--){
		int n; cin >> n;
		ll a[n];
		int cnt = 0;
		for(int i = 0; i < n; i++) cin >> a[i];
		for(int i = 0; i < n - 1; i++){
			if(a[i] > a[i + 1]){
				cnt = i + 1;
			}
		}
		cout << cnt << endl;
	}
}
