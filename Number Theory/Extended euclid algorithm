/*  tìm x,y của pt:  a.x + b.y = gcd(a,b)
                  <=> b.x1 + b%a.y1 = gcd(b,a%b) = gcd(a,b)
                  x = x1;   y = x - [a/b]*y1;
*/                 

using ll = long long;

ll gcd(ll a, ll b){
	if(b == 0)
		return a;
	else
		return gcd(b, a % b);
}

int x, y, g;
void extended_gcd(int a, int b){
	if(b == 0){
		x = 1;
		y = 0; 
		g = a;
	}
	extended_gcd(b, a % b);
	// x1 = x; y1 = y;
	int tmp = x;
	x = y;
	y = tmp - a / b * y;
}
